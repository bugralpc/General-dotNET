<Window x:Class="WpfApp_AsyncAwait_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_AsyncAwait_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <GroupBox Header="Without Task Continuation">
                <StackPanel>
                    <TextBlock Name="textBlock1" TextWrapping="Wrap"></TextBlock>
                    <TextBox Name="textBox1"></TextBox>
                    <Button Content="Click" Click="ButtonClick1"></Button>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="With Task Continuation">
                <StackPanel>
                    <TextBlock Name="textBlock2" TextWrapping="Wrap"></TextBlock>
                    <TextBox Name="textBox2"></TextBox>
                    <Button Content="Click" Click="ButttonClick2"></Button>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
